# Ubuntu Server 22.04 LTS
autoinstall:
  version: 1
  apt:
    geoip: true
    disable_components: []
    preserve_sources_list: false
    primary:
      - arches: [amd64, i386]
        uri: http://us.archive.ubuntu.com/ubuntu
      - arches: [default]
        uri: http://ports.ubuntu.com/ubuntu-ports
  early-commands:
    - sudo systemctl stop ssh
  locale: en_US
  keyboard:
    layout: us
  identity:
    hostname: jammy-daily
    username: vagrant
    password: $6$ZMST8.lTAN.P$8Epodc1n5eXwoefdV39r1n5.0AoVi/0Utfk4.f1ttEE9FFrKqyGVZ8bbecICntQ8wBkvI2hHg1EmPtehccGvb1
  ssh:
    install-server: true
    allow-pw: true
  packages:
    - openssh-server
    - whois 
  user-data:
    disable_root: false
    timezone: UTC
  late-commands:
    - sed -i -e 's/^#\?PasswordAuthentication.*/PasswordAuthentication yes/g' /target/etc/ssh/sshd_config
    - echo 'vagrant ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/vagrant
    - curtin in-target --target=/target -- chmod 440 /etc/sudoers.d/vagrant
    - "lvresize -v -l +100%FREE /dev/mapper/ubuntu--vg-ubuntu--lv"
    - "resize2fs -p /dev/mapper/ubuntu--vg-ubuntu--lv"
